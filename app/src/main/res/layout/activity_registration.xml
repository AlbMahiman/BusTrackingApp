<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationAct"
    android:background="@drawable/background5">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edt_background"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15sp"
            />




        <EditText
            android:id="@+id/edTxtRegEmail"
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:ems="10"
            android:hint="someone@gmail.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/edt_text"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_marginBottom="15dp"

            />

        <EditText
            android:id="@+id/edTxtRegPass"
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="textPassword"
            android:background="@drawable/edt_text"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"

            />


        <RadioGroup
            android:id="@+id/btnGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"

            >

            <RadioButton
                android:id="@+id/btnDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am Driver" />

            <RadioButton
                android:id="@+id/btnStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am Student" />
        </RadioGroup>


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginBottom="20dp"
           >

           <Button
               android:id="@+id/btnRegistrationNow"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Registration"
               android:background="@drawable/edt_text"
               android:layout_marginRight="18dp"

               />

           <Button
               android:id="@+id/btnBack"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="back"
               android:background="@drawable/edt_text"
               />

       </LinearLayout>

    </LinearLayout>


</ScrollView>